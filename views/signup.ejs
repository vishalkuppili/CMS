<!DOCTYPE html>
<html>

<head>
    <title>Signup</title>
    <% include ./partials/scripts %>
</head>

<body>
    <div class="wrapper">
        <% include ./partials/sidebar %>
        <div class="main-content">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>SignUp </strong></h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST" action="/user/signup">
                            <%= error %>
                            <div class="form-group">
                                <label for="exampleInputName1">First Name</label>
                                <input name="name" type="text" class="form-control" id="exampleInputEmail1"
                                    placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Username or Email</label>
                                <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                                    placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password <a href="/sessions/forgot_password">(forgot
                                        password)</a></label>
                                <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                                    placeholder="Password">
                            </div>
                            <button type="submit" class="btn btn-sm btn-default">SignUp</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>